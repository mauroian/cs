@import "_variables";


/* typography Christian (cc-)
With font-ratio (only, 1 is smallest, 2 is larger etc) */

$ratio-cnt: 1;
$ratio-cnt-max: 12;
$ratio-initial-size: 0.75;  //0.75
$ratio-scale-size: 1.16;   //1.125; // major second

@while $ratio-cnt <= $ratio-cnt-max {
	// $size: 1rem;

	.cc-fs-#{$ratio-cnt} {
		font-size: $ratio-initial-size + rem !important;
	}

	$ratio-cnt: $ratio-cnt + 1;
	$ratio-initial-size: $ratio-initial-size * $ratio-scale-size;
}


/* typography Bootstrap (except that 1 is smaller, 2 is larger etc.) */

.bs-fs-1 {
    font-size: calc(1.375rem + 1.5vw) !important;
  }
  
  .bs-fs-2 {
    font-size: calc(1.325rem + 0.9vw) !important;
  }
  
  .bs-fs-3 {
    font-size: calc(1.3rem + 0.6vw) !important;
  }
  
  .bs-fs-4 {
    font-size: calc(1.275rem + 0.3vw) !important;
  }
  
  .bs-fs-5 {
    font-size: 1.25rem !important;
  }
  
  .bs-fs-6 {
    font-size: 1rem !important;
  }

  
  

/* typography Antonio Panfili (ap-) */

$font-size: 10;
$default: 16;

@while $font-size <=70 {
	.ap-fs-#{$font-size} {
		font-size: $font-size + px !important;

		@media (max-width: $screen-lg) {
			@if ($font-size > 50) {
				font-size: 50px !important;
			} @else if ($font-size >=30) {
				font-size: 40px !important;
			} @else {
				font-size: $font-size + px !important;
			}
		}

		@media (max-width: $screen-md) {
			@if ($font-size > 50) {
				font-size: 35px !important;
			} @else if ($font-size >=30) {
				font-size: 30px !important;
			} @else {
				font-size: $default + px !important;
			}
		}

		@media (max-width: $screen-sm) {
			font-size: $default + px !important;
		}
	}

	$font-size: $font-size + 10;
}


/* typography like Bootstrap (bs-)
(only, 1 is smallest, 2 is larger etc) */

$cnt: 1;
@while $cnt <=6 {
	$size: 1rem;
	@if ($cnt ==2) {
		$size: 1.25rem;
	} @else if ($cnt ==3) {
		$size: 1.275rem;
	} @else if ($cnt ==4) {
		$size: 1.3rem;
	} @else if ($cnt ==5) {
		$size: 1.325rem;
	} @else if ($cnt ==6) {
		$size: 1.375rem;
	}
	.bs-fs-#{$cnt} {
		font-size: calc($size + 1.5vw) !important;
	}
	$cnt: $cnt + 1;
}



